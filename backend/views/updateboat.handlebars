<h2 class="page-header">Edit a Boat</h2>

{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}
<form method="post" action="/admin/boat/update/{{this._id}}">
    <div class="form-group">
        <label>Boat Name</label>
        <input class="form-control" value="{{this.boatname}}" name="boatname" />
    </div>
    <div class="form-group">
        <label>Boat Length (in ft)</label>
        <input class="form-control" value="{{this.boatlengthinfeet}}" name="boatlengthinfeet" />
    </div>
    <div class="form-group">
        <label>Boat Year</label>
        <input class="form-control" value="{{this.boatyear}}" name="boatyear" />
    </div>
    <div class="form-group">
        <label>Boat Capacity</label>
        <input class="form-control" value="{{this.boatcapacityinpeople}}" name="boatcapacityinpeople" />
    </div>
    <div class="form-group">
        <label>Boat Pic url</label>
        <input class="form-control" value="{{this.boatpictureurl}}" name="boatpictureurl" />
        <img src="{{this.boatpictureurl}}" width="100px">
    </div>
    <button type="submit" class="btn btn-default">Edit</button>
</form>
<a href="/admin/boats">Back to boats list</a>
